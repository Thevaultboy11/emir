---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="scroll mt-12 flex flex-col items-center gap-4 space-y-8 md:-mt-24"
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <p class="font-base max-w-3xl text-center italic text-2xl">
    <slot name="lead" />
    <span class="not-italic">- Emir PiriÄ‡</span>
  </p>

  <slot />
</section>
